{
    "version": 1,
    "tags":[
        {
            "name": "time-ticker",
            "description": "A non-visible custom element that fires an event periodically.",
            "selfResolvingModulePath": "https://unpkg.com/time-ticker@0.0.8/time-ticker.js?module",
            "attributes":[
                {
                    "name": "disabled",
                    "description": "Doesn't fire events when disabled attribute is present."
                },
                {
                    "name": "items",
                    "description": "Items to rotate through.  Sets repeat to length."
                },
                {
                    "name": "duration",
                    "description": "Number of milliseconds to wait."
                },
                {
                    "name": "repeat",
                    "description": "Number of times to repeat before setting counter back to 0.  Setting Items will set this automatically."
                },
                {
                    "name": "loop",
                    "description": "Indicates whether should cycle or stop."
                },
                {
                    "name": "wait",
                    "description": "Disable after every tick."
                }
            ],
            "properties":[
                {
                    "name": "disabled",
                    "description": "Doesn't fire events when true.",
                    "type": "boolean"
                },
                {
                    "name": "items",
                    "description": "Items to rotate through.  Sets repeat to length.",
                    "type": "boolean"
                },
                {
                    "name": "duration",
                    "description": "Number of milliseconds to wait.",
                    "type": "number"
                },
                {
                    "name": "repeat",
                    "description": "Number of times to repeat before setting counter back to 0.  Setting Items will set this automatically.",
                    "type": "number"
                },
                {
                    "name": "loop",
                    "description": "Indicates whether should cycle or stop.",
                    "type": "boolean"
                },
                {
                    "name": "wait",
                    "description": "Disable after every tick.",
                    "type": "boolean"
                }                
            ],
            "customEvents":[
                {
                    "name": "tick",
                    "description": "tick Event",
                    "detail":[
                        {
                            "name": "idx",
                            "description": "Count of timer event",
                            "type": "number"
                        },{
                            "name": "item",
                            "description": "Selected Item",
                            "type": "any"
                        },{
                            "name": "time",
                            "description": "Date/Time of tick event",
                            "type": "date"
                        }
                    ]
                }
            ]
        }
    ]
}