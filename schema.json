                    "type": "string"
                }
            },
            "type": "object"
        },
        "TimeTickerActions": {
            "description": "time-ticker actions",
            "properties": {
                "onTicks": {
                    "description": "React to an uptick.",
                    "type": "object"
                },
                "rotateItems": {
                    "description": "Set rotating items",
                    "type": "object"
                },
                "start": {
                    "description": "Starts the timer",
                    "type": "object"
                },
                "stop": {
                    "description": "Stop the timer",
                    "type": "object"
                }
            },
            "type": "object"
        },
        "TimeTickerInfo": {
            "properties": {
                "methods": {
                    "$ref": "#/definitions/TimeTickerActions"
                },
                "nonAttribProps": {
                    "items": [
                        {
                            "enum": [
                                "value"
                            ],
                            "type": "string"
                        }
                    ],
                    "maxItems": 1,
                    "minItems": 1,
                    "type": "array"
                },
                "props": {
                    "$ref": "#/definitions/TimeTickerProps"
                },
                "src": {
                    "enum": [
                        "./time-ticker.js"
                    ],
                    "type": "string"
                },
                "tagName": {
                    "enum": [
                        "time-ticker"
                    ],
                    "type": "string"
                }
            },
            "type": "object"
        },
        "TimeTickerProps": {
            "description": "time-ticker props",
            "properties": {
                "controller": {
                    "$ref": "#/definitions/AbortController",
                    "description": "Abort controller for the time ticker"
                },
                "disabled": {
                    "description": "Stop the time ticker.",
                    "type": "boolean"
                },
                "duration": {
                    "description": "Milliseconds to wait between ticks",
                    "type": "number"
                },
                "enabled": {
                    "description": "Start the time ticker.  Toggles disabled state",
                    "type": "boolean"
                },
                "idx": {
                    "description": "Current index of items (if applicable)",
                    "type": "number"
                },
                "items": {
                    "description": "Items to rotate through and broadcast",
                    "items": {},
                    "type": "array"
                },
                "loop": {
                    "description": "Loop the time ticker.",
                    "type": "boolean"
                },
                "repeat": {
                    "description": "Upper bound for idx before being reset to 0",
                    "type": "number"
                },
                "ticks": {
                    "description": "Number of ticks encountered regardless of any looping / repeating.",
                    "type": "number"
                },
                "value": {
                    "$ref": "#/definitions/IValue",
                    "description": "Currently selected idx value and selected item"
                },
                "wait": {
                    "description": "Wait for the duration before firing the first tick.",
                    "type": "boolean"
                }
            },
            "type": "object"
        }
